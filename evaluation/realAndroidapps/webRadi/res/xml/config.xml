    <splash density="port-xxxhdpi" src="resources/splash/android/screen-port-xxxhdpi.png" />
    <allow-intent href="market:*" />
    <name>WebRatio</name>
    <description> The WebRatio Mobile Developer app is a testing utility for web developers
        and designers using the WebRatio Platform. After installing the
        WebRatio Mobile Developer app you will be able to connect to your WebRatio
        desktop app to instantly view and test your work on the device.
</description>
    <author email="support@webratio.com" href="http://www.webratio.com"> WebRatio srl
</author>
    <hook src="resources/script/add-hockeyapp.js" type="before_build" />
    <hook src="resources/script/production-analytics.js" type="before_build" />
    <hook src="resources/script/remove-hockeyapp.js" type="after_compile" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="default" />
    <preference name="FadeSplashScreenDuration" value="200" />
    <preference name="BackupWebStorage" value="none" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="data:*" />
    <allow-navigation href="cdvfile://*/*" />
    <allow-navigation href="content://*/*" />
